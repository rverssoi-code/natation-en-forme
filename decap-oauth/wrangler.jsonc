{
  "$schema": "node_modules/wrangler/config-schema.json",

  "name": "decap-oauth",
  "main": "src/index.js",
  "compatibility_date": "2025-12-05",

  "observability": { "enabled": true },

  "vars": {
    "REDIRECT_URI": "https://decap-oauth.jushop.workers.dev/callback"
  },

  "env": {
    "production": {
      "secrets": [
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET"
      ]
    }
  }
}